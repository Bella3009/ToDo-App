def int_input(question,error_message):
    """This function makes sure that user input is a number. It will loop until gets an number as result and convert it to integer"""
    while True:
        user_test = input(question)
        if (user_test.isdigit()):
            ans = int(user_test)
            return ans
        else:
            print(f"Invalid input. {error_message}")

def float_input(question,error_message):
    """This function makes sure that user input is a number. It will loop until gets an number as result and convert it to float"""
    while True:
        user_test = input(question)
        if (user_test.isdigit()):
            ans = float(user_test)
            return ans
        else:
            print(f"Invalid input. {error_message}")
                        
if __name__ == "__main__":
    print(help(int_input))
    print(help(float_input))
