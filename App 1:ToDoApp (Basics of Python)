while True:
     user_action = input("Type 'add', 'show', 'edit', 'complete' or 'exit': ").lower()
     user_action = user_action.strip()
     
     if user_action == "add":
         task = int(input("How many tasks you want to add: "))
         n = 1
         print("Write what to add in your 'To Do List':")
    
         while n <= task:
           input_task= input() + '\n'
           
           file = open('Tasks.txt', 'r')
           todo_list = file.readlines()
           file.close()
           
           todo_list.append(input_task)
           file =open('Tasks.txt', 'w')
           file.writelines(todo_list)
           file.close()
           n = n+1
           
         print("Items added succesfully")
        
     elif user_action == "show":
         file = open('Tasks.txt','r')
         todo_list = file.readlines()
         file.close()
         for index, tasks in enumerate(todo_list):
             tasks = tasks.title()
             print(f"{index+1}. {tasks}")
            
     elif user_action == "edit":
         task_list = int(input("Type the number of the task you want to edit: "))
         task_list = task_list - 1
         
         todo_list[task_list] = input("You want to edit the task to: ")
     
     elif user_action == "complete":
         task_list = int(input("Type the number of the task you want to complete: "))
         task_list = task_list - 1
         
         todo_list.pop(task_list)
         print("Item removed succesfully")
             
     elif user_action == "exit":
          break
     
     else:
         print("Input not valid. Try again")
         
print("Thank you for using and bye")
