while True:
     user_action = input("Type 'add', 'show', 'edit', 'complete' or 'exit': ").lower()
     user_action = user_action.strip()
     
     if user_action == "add":
         task = int(input("How many tasks you want to add: "))
         n = 1
         print("Write what to add in your 'To Do List':")
    
         while n <= task:
           input_task= input() + '\n'
           
           with open("Tasks.txt", "r") as file:
               todo_list = file.readlines()
               # with the with is not needed file.close() because it close automatically
           
           todo_list.append(input_task)
           
           with open("Tasks.txt", "w") as file:
               todo_list = file.writelines(todo_list)
 
           n = n+1
           
         print("Items added succesfully")
        
     elif user_action == "show":
         with open("Tasks.txt", "r") as file:
               todo_list = file.readlines()
          
         new_todo = [task.strip("\n") for task in todo_list]
         
         for index, tasks in enumerate(new_todo):
             tasks = tasks.title() #tasks = tasks.strip("\n") and remove liner 37
             print(f"{index+1}. {tasks}")
            
     elif user_action == "edit":
         task_list = int(input("Type the number of the task you want to edit: "))
         task_list = task_list - 1
         
         todo_list[task_list] = input("You want to edit the task to: ") + "\n"
         
         print("Item edited successfully")
         
         with open("Tasks.txt", "w") as file:
               todo_list = file.writelines(todo_list)
     
     elif user_action == "complete":
         task_list = int(input("Type the number of the task you want to mark as complete: "))
         task_list = task_list - 1
         
         todo_list.pop(task_list)
         print("Item completed removed succesfully")
         
         with open("Tasks.txt", "w") as file:
               todo_list = file.writelines(todo_list)
             
     elif user_action == "exit":
          break
     
     else:
         print("Input not valid. Try again")
         
print("Thank you for using and bye")
